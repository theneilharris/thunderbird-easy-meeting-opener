{
  "manifest_version": 2,
  "name": "Calendar Meeting Opener",
  "version": "1.0",
  "description": "Detects meeting links in calendar events and adds a context menu item to open them directly.",
  "author": "Neil Harris",
  "browser_specific_settings": {
    "gecko": {
      "id": "calendar-meeting-opener@example.com",
      "strict_min_version": "78.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "menus",
    "messagesRead",
    "tabs"
  ],
  "experiment_apis": {
    "LightningMenus": {
      "schema": "schema/LightningMenus.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["LightningMenus"]],
        "script": "experiments/LightningMenus.js"
      }
    }
  }
}
